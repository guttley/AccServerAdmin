@page
@using AccServerAdmin.Application
@using AccServerAdmin.Service
@model AccServerAdmin.Service.Areas.Configuration.Pages.GlobalBop.BopListModel

@{
    ViewData["Title"] = "Balance of Performance";
}

@section Scripts
{
    <script src="@Url.Content("/vendor/datatables.net/js/jquery.dataTables.js")"></script>
    <script src="@Url.Content("/vendor/datatables.net-bs4/js/dataTables.bootstrap4.js")"></script>
    <script src="@Url.Content("/vendor/datatables.net-responsive/js/dataTables.responsive.min.js")"></script>
    <script src="@Url.Content("/vendor/datatables.net-responsive-bs4/js/responsive.bootstrap4.min.js")"></script>
    <script src="@Url.Content("/js/boplist-datatable.js")"></script>
}


<div class="page-header">
    <div class="container-fluid">
        <h2 class="h5 no-margin-bottom">Balance of Performance - <a asp-area="Configuration" asp-page="/GlobalBop/Edit" asp>Create new BoP</a></h2>
    </div>
</div>

<section class="no-padding-top no-padding-bottom">
    <div class="container-fluid">
        <div class="block">

            <div class="block-body">
                <div class="row">
                    <div class="table-responsive">
                        <table id="bopTable" class="table table-striped table-sm" style="width: 100%;">
                            <thead>
                                <tr>
                                    <th>Track</th>
                                    <th>Car</th>
                                    <th>Ballast</th>
                                    <th>Restrictor</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var bop in Model.BalanceList)
                            {
                                <tr>
                                    <th scope="row">@ListData.Tracks[bop.Track]</th>
                                    <td>@ListData.Cars[bop.Car]</td>
                                    <td>@bop.Ballast</td>
                                    <td>@bop.Restrictor</td>
                                    <td>
                                        <a asp-area="Configuration" asp-page="/GlobalBop/Edit" asp-route-Id="@bop.Id">Edit</a>
                                        &nbsp;
                                        <a asp-area="Configuration" asp-page="/GlobalBop/Delete" asp-route-Id="@bop.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@page
@using AccServerAdmin.Service
@model AccServerAdmin.Service.Areas.Configuration.Pages.GlobalBop.DeleteBopModel
@{
    ViewData["Title"] = "Delete Balance of Performance";
}

<div class="page-header">
    <div class="container-fluid">
        <h2 class="h5 no-margin-bottom">Balance of Performance</h2>
    </div>
</div>

<section class="no-padding-top no-padding-bottom">
    <div class="container-fluid">
        <div class="row">
                <div class="col-lg-12">
                    <div class="card">

                        <div class="card-header d-flex align-items-center">
                            <h4>Delete Balance - @ListData.Tracks[Model.Balance.Track] - @ListData.Cars[Model.Balance.Car]</h4>
                        </div>

                        <div class="card-body">

                            <form method="post">

                                @Html.HiddenFor(model => model.Balance.Id)

                                <div class="form-group-material">
                                    <div class="text-danger">Are you sure you wish to delete this Balance of Performance?</div>
                                </div>

                                <div class="form-group">
                                    <input type="submit" value="Delete" class="btn btn-primary">
                                    <button type="button" onclick="window.history.go(-1); return false;" class="btn btn-primary">Cancel</button>
                                </div>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
</section>

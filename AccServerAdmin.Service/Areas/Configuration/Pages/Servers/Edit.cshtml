@page
@model AccServerAdmin.Service.Areas.Configuration.Pages.Servers.EditServerModel
@{
    ViewData["Title"] = "Edit Server";
}

<section class="forms">
    <div class="container-fluid">

        <header>
            <h1 class="h3 display"></h1>
        </header>

        <div class="row">
            <div class="col-lg-12">
                <div class="card">

                    <div class="card-header d-flex align-items-center">
                        <h4>Edit Server - @Model.Server.Name</h4>
                    </div>

                    <div class="card-body">
                        
                        <form method="post" class="form-horizontal">

                            <input asp-for="Server.Id" type="hidden" />
                            <input asp-for="Server.GameConfiguration.ServerId" type="hidden" />
                            <input asp-for="Server.GameConfiguration.Id" type="hidden" />
                            <input asp-for="Server.NetworkConfiguration.ServerId" type="hidden" />
                            <input asp-for="Server.NetworkConfiguration.Id" type="hidden" />
                            <input asp-for="Server.EventConfiguration.ServerId" type="hidden" />
                            <input asp-for="Server.EventConfiguration.Id" type="hidden" />

                            <div class="form-group row">
                                <label asp-for="Server.Name" class="col-sm-2 form-control-label">Server Name</label>
                                <div class="col-sm-10">
                                    <input asp-for="Server.Name" type="text" class="form-control" />
                                </div>
                            </div>
                            
                               
                            <ul role="tablist" class="nav nav-tabs nav-pills flex-column flex-sm-row text-center">
                                <li class="nav-item flex-sm-fill">
                                    <a data-toggle="tab" role="tab" href="#nav-tab-network" aria-selected="true" class="nav-link text-uppercase font-weight-bold mr-sm-3 rounded-0 active">
                                        Network Settings
                                    </a>
                                </li>
                                <li class="nav-item flex-sm-fill">
                                    <a data-toggle="tab" role="tab" href="#nav-tab-game" aria-selected="false" class="nav-link text-uppercase font-weight-bold mr-sm-3 rounded-0">
                                        Game Settings
                                    </a>
                                </li>
                                <li class="nav-item flex-sm-fill">
                                    <a data-toggle="tab" role="tab" href="#nav-tab-event" aria-selected="false" class="nav-link text-uppercase font-weight-bold mr-sm-3 rounded-0">
                                        Event Settings
                                    </a>
                                </li>
                                <li class="nav-item flex-sm-fill">
                                    <a data-toggle="tab" role="tab" href="#nav-tab-sessions" aria-selected="false" class="nav-link text-uppercase font-weight-bold mr-sm-3 rounded-0">
                                        Session Settings
                                    </a>
                                </li>
                                <li class="nav-item flex-sm-fill">
                                    <a data-toggle="tab" role="tab" href="#nav-tab-weather" aria-selected="false" class="nav-link text-uppercase font-weight-bold mr-sm-3 rounded-0">
                                        Weather Settings
                                    </a>
                                </li>
                            </ul>

                            <div class="tab-content">
                                <p>
                                <div id="nav-tab-network" role="tabpanel" aria-labelledby="network-tab" class="tab-pane fade px-4 py-5 show active">
                                    <!-- Network settings -->
                                    <partial name="_EditNetworkPartial"/>
                                </div>
                                <div id="nav-tab-game" role="tabpanel" aria-labelledby="game-tab" class="tab-pane fade px-4 py-5">
                                    <!-- Game server settings -->
                                    <partial name="_EditGamePartial"/>
                                </div>
                                <div id="nav-tab-event" role="tabpanel" aria-labelledby="event-tab" class="tab-pane fade px-4 py-5">
                                    <!-- Event settings -->
                                    <partial name="_EditEventPartial"/>
                                </div>
                                <div id="nav-tab-sessions" role="tabpanel" aria-labelledby="sessions-tab" class="tab-pane fade px-4 py-5">
                                    <!-- Sessions settings -->
                                    <partial name="_EditSessionsPartial"/>
                                </div>
                                <div id="nav-tab-weather" role="tabpanel" aria-labelledby="weather-tab" class="tab-pane fade px-4 py-5">
                                    <!-- Weather settings -->
                                    <partial name="_EditWeatherPartial"/>
                                </div>
                                </p>
                            </div>

                            <div class="line"></div>
                            
                            <div class="form-group-material">
                                <div asp-validation-summary="All" class="text-danger"></div>
                            </div>                            

                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary">
                                <button type="button" onclick="location.href='/Configuration/Servers/List'" class="btn btn-primary">Cancel</button>
                            </div>

                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

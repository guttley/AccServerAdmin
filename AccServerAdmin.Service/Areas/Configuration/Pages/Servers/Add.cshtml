@page
@model AccServerAdmin.Service.Areas.Configuration.Pages.Servers.AddServerModel
@{
    ViewData["Title"] = "Add a new server";
}

<div class="page-header">
    <div class="container-fluid">
        <h2 class="h5 no-margin-bottom">Servers</h2>
    </div>
</div>

<section class="no-padding-top no-padding-bottom">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6">
                <div class="card">

                    <div class="card-header d-flex align-items-center">
                        <h4>Create New Server</h4>
                    </div>
                    <div class="card-body">
                        <p></p>
                        <form method="post">
                            <div class="form-group">
                                <label asp-for="Server.Name" class="label-material">Server Name</label>
                                <input asp-for="Server.Name" type="text" class="form-control">
                                <span asp-validation-for="Server.Name" class="text-danger"></span>
                            </div>

                            <div class="form-group-material">
                                <div asp-validation-summary="All" class="text-danger"></div>
                            </div>

                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary">
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
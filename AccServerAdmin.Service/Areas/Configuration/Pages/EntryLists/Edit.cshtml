@page
@model AccServerAdmin.Service.Areas.Configuration.Pages.EntryLists.EditEntryListModel
@{
    ViewData["Title"] = "Edit an entry list";
}

<div class="page-header">
    <div class="container-fluid">
        <h2 class="h5 no-margin-bottom">Drivers</h2>
    </div>
</div>

<section class="no-padding-top no-padding-bottom">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8">
                <div class="card">

                    <div class="card-header">
                        @if (Model.EntryList.Id == Guid.Empty)
                        {
                            <h4>Create Entry List</h4>
                        }
                        else
                        {
                            <h4>Edit Entry List - @Model.EntryList.Name</h4>
                        }
                    </div>

                    <div class="card-body">

                        <form method="post">

                            @Html.HiddenFor(model => model.EntryList.Id)

                            <div class="form-group row">
                                <div class="col-sm-10">
                                    <input asp-for="EntryList.Name" type="text" class="form-control">
                                    <span asp-validation-for="EntryList.Name" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary">
                                <button type="button" onclick="window.history.go(-1); return false;" class="btn btn-primary">Cancel</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
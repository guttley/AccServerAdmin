@page
@using AccServerAdmin.Domain
@model AccServerAdmin.Service.Areas.Configuration.Pages.EntryLists.EntryListModel

@{
    ViewData["Title"] = "Entry lists";
}

@section Scripts
{
    <script src="@Url.Content("/vendor/datatables.net/js/jquery.dataTables.js")"></script>
    <script src="@Url.Content("/vendor/datatables.net-bs4/js/dataTables.bootstrap4.js")"></script>
    <script src="@Url.Content("/vendor/datatables.net-responsive/js/dataTables.responsive.min.js")"></script>
    <script src="@Url.Content("/vendor/datatables.net-responsive-bs4/js/responsive.bootstrap4.min.js")"></script>
    <script src="@Url.Content("/js/entrylist-datatable.js")"></script>
}

<div class="page-header">
    <div class="container-fluid">
        <h2 class="h5 no-margin-bottom">Global Entry Lists - <a asp-area="Configuration" asp-page="/EntryLists/Edit" asp>Create new entry list</a></h2>
    </div>
</div>

<section class="no-padding-top no-padding-bottom">
    <div class="container-fluid">
        <div class="block">
            <div class="block-body">
                <div class="row">
                    <div class="table-responsive">
                        <table id="entriesTable" class="table table-striped table-sm" style="width: 100%;">
                            <thead>
                                <tr>
                                    <th>Entry List Name</th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var entryList in Model.EntryLists)
                            {
                                <tr>
                                    <th scope="row">@entryList.Name
                                        <a asp-area="Configuration" asp-page="/EntryLists/Edit" asp-route-Id="@entryList.Id">Edit</a>
                                        &nbsp;
                                        <a asp-area="Configuration" asp-page="/EntryLists/Delete" asp-route-Id="@entryList.Id">Delete</a>
                                    </th>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
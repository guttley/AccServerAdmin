@page
@model SettingsModel
@{
    ViewData["Title"] = "Settings";
}

<div class="page-header">
    <div class="container-fluid">
        <h2 class="h5 no-margin-bottom">Settings</h2>
    </div>
</div>

<section class="no-padding-top no-padding-bottom">
    <div class="container-fluid">
        <div class="row">

            <div class="col-lg-6">
                <div class="card">

                    <form method="post">

                        <div class="card-header d-flex align-items-center">
                            <h4>Security Settings</h4>
                        </div>
                        <div class="card-body">
                            <p></p>

                            <div class="form-group">
                                <label asp-for="Settings.AdminPassphrase" class="label-material">Admin Passphrase (used when registering new admins)</label>
                                <input asp-for="Settings.AdminPassphrase" type="text" class="form-control">
                                <span asp-validation-for="Settings.AdminPassphrase" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="card-header d-flex align-items-center">
                            <h4>Directory Settings</h4>
                        </div>
                        <div class="card-body">
                            <p></p>

                            <input type="hidden" asp-for="Settings.Id" />

                            <div class="form-group">
                                <label asp-for="Settings.ServerBasePath" class="label-material">Base Server Directory</label>
                                <input asp-for="Settings.ServerBasePath" type="text" class="form-control">
                                <span asp-validation-for="Settings.ServerBasePath" class="text-danger"></span>
                                <span class="text-small text-gray help-block-none">Directory of the base ACC server files, this folder is copied whenever a new instance is created. You will need to copy the server files here.</span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Settings.InstanceBasePath" class="label-material">Instance Base Directory</label>
                                <input asp-for="Settings.InstanceBasePath" type="text" class="form-control">
                                <span asp-validation-for="Settings.InstanceBasePath" class="text-danger"></span>
                                <span class="text-small text-gray help-block-none">The directory where to create new ACC server instances.</span>
                            </div>

                            <div class="form-group i-checks">
                                <input asp-for="CreateDirectories" type="checkbox" class="form-control-custom">
                                <label asp-for="CreateDirectories" class="label-material">Create directories</label>
                            </div>

                            @if (Model.IsDefaulted)
                            {
                                <div class="form-group">
                                    <p class="text-danger">These settings are the defaults, please alter them or accept by pressing Save</p>
                                </div>
                            }

                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary">
                            </div>


                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
